<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/main_text_explanation"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/main_explanation"
        />

    <Button
        android:id="@+id/main_button_signup"
        style="?android:textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/main_text_explanation"
        android:enabled="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/main_button_signup"
        android:textStyle="bold" />

    <Button
        android:id="@+id/main_button_login"
        style="?android:textAppearanceSmall"
        app:layout_constraintTop_toBottomOf="@id/main_button_signup"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="@string/main_button_login"
        android:textStyle="bold" />

</android.support.constraint.ConstraintLayout>